@model IEnumerable<Category>

<div class="list-group">

	
	
		<a href="/"
		   class="list-group-item list-group-item-action ">
			Tüm Kategoriler
		</a>
	


</div>


<div class="list-group">

	@foreach (var i in Model)
	{
		<a asp-controller="Home" asp-action="Index" asp-route="@i.Id"
		   class="list-group-item list-group-item-action @(ViewBag.SelectedCategory== i.Id.ToString()?"active":"") ">@i.Name</a>
	}



</div>